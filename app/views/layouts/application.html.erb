<!DOCTYPE html>
<html>
  <head>
    <title><%= t 'app_name' %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>
  </head>

  <body class="bg-image" style="background-image: url(/assets/neutral_background.jpeg)";
                         backgrond-repeat: no-repeat;>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <h1 class="navbar-brand"> <%= t 'app_name' %> </h1>
      <div class="collapse navbar-collapse">
        <%= link_to t('buttons.home'), root_path, class:"btn btn-primary btn-sm" %>
        <%= link_to t('activerecord.models.service_order.many'), service_orders_path, class:"btn btn-primary btn-sm" %>
        <%= link_to t('activerecord.models.vehicle.other'), vehicles_path, class:"btn btn-primary btn-sm" %>
  
        <% if user_signed_in? %>
          <%= link_to t('activerecord.models.transport_modality.many'), transport_modalities_path, class:"btn btn-primary btn-sm" %>
          <%= button_to t('buttons.sign_out'), destroy_user_session_path, method: :delete, class:"btn btn-danger btn-sm" %>
        <% else %>
          <%= link_to t('buttons.login'), new_user_session_path, class:"btn btn-success btn-sm" %>
        <% end %>
      </div>
    </nav>
    <section>
      <%= notice %>
      <%= alert %> 
    </section>
    <%= yield %>
  </body>
</html>
